<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <Button
        android:id="@+id/bark_button1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:onClick="onButtonClick"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="#5EB2CC"
        android:textSize="12dp"
        android:text="멍 !"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/bark_button2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/bark_button1"
        android:layout_toEndOf="@+id/bark_button1"
        android:layout_toRightOf="@+id/bark_button1"
        android:onClick="onButtonClick"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="#5EB2CC"
        android:textSize="12dp"
        android:text="멍 멍 멍 멍 멍 !"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/bark_button3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/bark_button1"
        android:layout_alignStart="@+id/bark_button1"
        android:layout_below="@+id/bark_button1"
        android:layout_marginTop="10dp"
        android:onClick="onButtonClick"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="#5EB2CC"
        android:textSize="12dp"
        android:text="아이를 보면 짖는다"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/bark_button4"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/bark_button2"
        android:layout_alignStart="@+id/bark_button2"
        android:layout_below="@+id/bark_button2"
        android:layout_marginTop="10dp"
        android:onClick="onButtonClick"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="#5EB2CC"
        android:text="반려인이 귀가하면 짖는다"
        android:textSize="12dp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/bark_button5"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/bark_button3"
        android:layout_alignStart="@+id/bark_button3"
        android:layout_below="@+id/bark_button3"
        android:layout_marginTop="10dp"
        android:onClick="onButtonClick"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="#5EB2CC"
        android:textSize="12dp"
        android:text="통화 중에 짖는다"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/bark_button6"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/bark_button4"
        android:layout_alignStart="@+id/bark_button4"
        android:layout_below="@+id/bark_button4"
        android:layout_marginTop="10dp"
        android:onClick="onButtonClick"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="#5EB2CC"
        android:textSize="12dp"
        android:text="혼자일 때 짖는다"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/bark_button7"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/bark_button5"
        android:layout_alignStart="@+id/bark_button5"
        android:layout_below="@+id/bark_button5"
        android:layout_marginTop="10dp"
        android:onClick="onButtonClick"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="#5EB2CC"
        android:textSize="12dp"
        android:text="쫒아가며 짖는다"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/bark_button8"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/bark_button6"
        android:layout_alignStart="@+id/bark_button6"
        android:layout_below="@+id/bark_button6"
        android:layout_marginTop="10dp"
        android:onClick="onButtonClick"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="#5EB2CC"
        android:textSize="12dp"
        android:text="새벽에 짖는다"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/bark_button9"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/bark_button8"
        android:layout_alignRight="@+id/bark_button8"
        android:layout_below="@+id/bark_button7"
        android:layout_marginEnd="74dp"
        android:layout_marginRight="74dp"
        android:layout_marginTop="11dp"
        android:onClick="onButtonClick"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="#5EB2CC"
        android:text="멍멍! 짖는 원인을 모른다"
        android:textSize="12dp"
        android:textColor="#FFFFFF"/>
</RelativeLayout>