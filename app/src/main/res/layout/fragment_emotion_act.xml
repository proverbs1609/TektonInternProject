<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDDA7">


    <Button
        android:id="@+id/act_button1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:text="배를 보인다"/>

    <Button
        android:id="@+id/act_button2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/act_button1"
        android:layout_toEndOf="@+id/act_button1"
        android:layout_toRightOf="@+id/act_button1"
        android:text="기지개를 켠다" />

    <Button
        android:id="@+id/act_button3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/act_button1"
        android:layout_alignStart="@+id/act_button1"
        android:layout_below="@+id/act_button1"
        android:layout_marginTop="10dp"
        android:text="엉덩이를 바닥에 끈다" />

    <Button
        android:id="@+id/act_button4"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/act_button2"
        android:layout_alignStart="@+id/act_button2"
        android:layout_below="@+id/act_button2"
        android:layout_marginTop="10dp"
        android:text="앞발로 긁고 위아래로 움직인다"
        android:textSize="10dp"/>

    <Button
        android:id="@+id/act_button5"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/act_button3"
        android:layout_alignStart="@+id/act_button3"
        android:layout_below="@+id/act_button3"
        android:layout_marginTop="10dp"
        android:text="고개를 갸우뚱 한다" />

    <Button
        android:id="@+id/act_button6"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/act_button4"
        android:layout_alignStart="@+id/act_button4"
        android:layout_below="@+id/act_button4"
        android:layout_marginTop="10dp"
        android:text="등을 보인다"/>

    <Button
        android:id="@+id/act_button7"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/act_button5"
        android:layout_alignStart="@+id/act_button5"
        android:layout_below="@+id/act_button5"
        android:layout_marginTop="10dp"
        android:text="꼬리를 친다" />

    <Button
        android:id="@+id/act_button8"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/act_button6"
        android:layout_alignStart="@+id/act_button6"
        android:layout_below="@+id/act_button6"
        android:layout_marginTop="10dp"
        android:text="몸을 부르르 떤다"/>

</RelativeLayout>