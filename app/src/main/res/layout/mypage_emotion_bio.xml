<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <Button
        android:id="@+id/bio_button1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="#5EB2CC"
        android:onClick="onButtonClick"
        android:text="얼음처럼 굳는다"
        android:textSize="12dp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/bio_button2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/bio_button1"
        android:layout_toEndOf="@+id/bio_button1"
        android:layout_toRightOf="@+id/bio_button1"
        android:onClick="onButtonClick"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="#5EB2CC"
        android:textSize="12dp"
        android:text="덜덜 떤다"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/bio_button3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/bio_button1"
        android:layout_alignStart="@+id/bio_button1"
        android:layout_below="@+id/bio_button1"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="#5EB2CC"
        android:onClick="onButtonClick"
        android:text="털을 곤두세운다"
        android:textSize="12dp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/bio_button4"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/bio_button2"
        android:layout_alignStart="@+id/bio_button2"
        android:layout_below="@+id/bio_button2"
        android:layout_marginTop="10dp"
        android:onClick="onButtonClick"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="#5EB2CC"
        android:textSize="12dp"
        android:text="호흡이 빨라진다"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/bio_button5"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/bio_button3"
        android:layout_alignStart="@+id/bio_button3"
        android:layout_below="@+id/bio_button3"
        android:layout_marginTop="10dp"
        android:onClick="onButtonClick"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="#5EB2CC"
        android:textSize="12dp"
        android:text="하품을 한다"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/bio_button6"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/bio_button4"
        android:layout_alignStart="@+id/bio_button4"
        android:layout_below="@+id/bio_button4"
        android:layout_marginTop="10dp"
        android:onClick="onButtonClick"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="#5EB2CC"
        android:textSize="12dp"
        android:text="땀을 흘린다"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/bio_button7"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/bio_button5"
        android:layout_alignStart="@+id/bio_button5"
        android:layout_below="@+id/bio_button5"
        android:layout_marginTop="10dp"
        android:onClick="onButtonClick"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="#5EB2CC"
        android:textSize="12dp"
        android:text="침을 흘린다"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/bio_button8"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/bio_button6"
        android:layout_alignStart="@+id/bio_button6"
        android:layout_below="@+id/bio_button6"
        android:layout_marginTop="10dp"
        android:onClick="onButtonClick"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="#5EB2CC"
        android:textSize="12dp"
        android:text="비듬이 날린다"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/bio_button9"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/bio_button7"
        android:layout_alignStart="@+id/bio_button7"
        android:layout_below="@+id/bio_button7"
        android:layout_marginLeft="75dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="11dp"
        android:onClick="onButtonClick"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="#5EB2CC"
        android:textSize="12dp"
        android:text="털이 날린다"
        android:textColor="#FFFFFF"/>

</RelativeLayout>