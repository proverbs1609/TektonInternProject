<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <Button
        android:id="@+id/attack_button1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:onClick="onButtonClick"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="#5EB2CC"
        android:textSize="12dp"
        android:text="반려인을 공격한다"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/attack_button2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/attack_button1"
        android:layout_toEndOf="@+id/attack_button1"
        android:layout_toRightOf="@+id/attack_button1"
        android:onClick="onButtonClick"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="#5EB2CC"
        android:textSize="12dp"
        android:text="가족 외에 공격성을 보인다"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/attack_button3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/attack_button1"
        android:layout_alignStart="@+id/attack_button1"
        android:layout_below="@+id/attack_button1"
        android:layout_marginTop="10dp"
        android:onClick="onButtonClick"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="#5EB2CC"
        android:textSize="12dp"
        android:text="@string/str_attack_button3"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/attack_button4"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/attack_button2"
        android:layout_alignStart="@+id/attack_button2"
        android:layout_below="@+id/attack_button2"
        android:layout_marginTop="10dp"
        android:onClick="onButtonClick"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="#5EB2CC"
        android:textSize="12dp"
        android:text="@string/str_attack_button4"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/attack_button5"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/attack_button3"
        android:layout_alignStart="@+id/attack_button3"
        android:layout_below="@+id/attack_button3"
        android:layout_marginLeft="75dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="11dp"
        android:onClick="onButtonClick"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="#5EB2CC"
        android:textSize="12dp"
        android:text="@string/str_attack_button5"
        android:textColor="#FFFFFF"/>

</RelativeLayout>