                        android:textColor="#2E323C"
                        android:text="반려견 전용 운동장 가기" />
                    <Switch
                        android:id="@+id/bucketswitch16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bucket17"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/bucket16"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/bucket17title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="30dp"
                        android:textSize="15dp"
                        android:textColor="#2E323C"
                        android:text="함께 여행가기" />
                    <Switch
                        android:id="@+id/bucketswitch17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bucket18"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/bucket17"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/bucket18title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="30dp"
                        android:textSize="15dp"
                        android:textColor="#2E323C"
                        android:text="패셔니스타 도전하기" />
                    <Switch
                        android:id="@+id/bucketswitch18"
                        android:layout_width="wrap_content"
